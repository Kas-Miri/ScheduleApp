@model List<Discipline>

    <form action="Discipline" method="post">
        <label for="Name">Название дисциплины: </label>
        <input name="Name" type="text" required />
        <input type="submit" value="Добавить" />
    </form>

<div>
    @foreach (var item in Model)
    {
        <p>@item.Name</p>
    }
</div>
